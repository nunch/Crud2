

@using PerennisationSPI.Models
@{
    Layout = null;
ActionSet actionSet = (ActionSet) ViewBag.actionSet;
    
        bool useChosen_on_fk_fk_ActionSet_0 = true;
    
}


<form method="post" id="modifyData-form" action="/ActionSet/update">
    <fieldset>
        <legend>Modifier ActionSet</legend>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Priorite</label>
                            <input type="number" id="Priorite" name="Priorite" class="form-control" required=required  value="@actionSet.Priorite" />
                    <div id="Priorite-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Priorite</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">DateCreation</label>
                            <input type="text" id="DateCreation" class="datetimepicker form-control" name="DateCreation" required=required  value="@actionSet.DateCreation" />
                    <div id="DateCreation-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir DateCreation</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">DateRealisation</label>
                            <input type="text" id="DateRealisation" class="datetimepicker form-control" name="DateRealisation" required=required  value="@actionSet.DateRealisation" />
                    <div id="DateRealisation-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir DateRealisation</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">DateModification</label>
                            <input type="text" id="DateModification" class="datetimepicker form-control" name="DateModification" required=required  value="@actionSet.DateModification" />
                    <div id="DateModification-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir DateModification</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">IsSuppr</label>
                            <input type="number" id="IsSuppr" name="IsSuppr" class="form-control" required=required  value="@actionSet.IsSuppr" />
                    <div id="IsSuppr-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir IsSuppr</p>
                    </div>
                </div>
                
                    @if(useChosen_on_fk_fk_ActionSet_0)
                    {
                    <div class="form-group" id="fk-0-div">
                        <input type="hidden" id="Id_Entite-object" value="@actionSet.Id_Entite" />
                        <label class="control-label">Id_Entite</label>
                        <select data-placeholder="Choisir Id_Entite" class="chosen-select" id="Id_Entite" name="Id_Entite" required=required>
                            <option disabled selected>Choisir Id_Entite</option>
                            <option value="">Aucun</option>
                        </select>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_Entite</p>
                        </div>
                    </div>
                    }else
                    {
                    <div id="fk-0-div" class="form-group">
                        <label class="control-label">Id_Entite</label>
                        <input type="hidden" name="Id_Entite" id="Id_Entite" value="@actionSet.Id_Entite" required=required />
                        <div class="row">
                            <div class="col-xs-1">
                                <button id="btnResetFilters-fk-0" class="btn refresh" data-rel="tooltip" data-toggle="tooltip" data-original-title="R&eacute;initialiser les filtres">
                                    <i class="fa fa-refresh Icon"></i>
                                </button>
                            </div>
                            <div class="col-xs-4 ">
                                <div id="tab_filter-fk-0" class="customFilter">
                                    <label>
                                        <input id="customFilterInput-fk-0" type="search" class="form-control input-sm" placeholder="Rechercher..." aria-controls="fk-0-table">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <table id="fk-0-table">
                            <tfoot>
                                <tr>
                                        <th>IsSuppr</th>
                                        <th>Id_Entite</th>
                                        <th>Nom</th>
                                        <th>Description</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_Entite</p>
                        </div>
                    </div>
                    }
                
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Etat</label>
                            <input type="number" id="Etat" name="Etat" class="form-control" required=required  value="@actionSet.Etat" />
                    <div id="Etat-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Etat</p>
                    </div>
                </div>
                <input type="hidden" id="Id_Action" name="Id_Action" value="@actionSet.Id_Action" />
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Titre</label>
                            <input type="text" maxlength="0" id="Titre" name="Titre" class="form-control" required=required  value="@actionSet.Titre" />
                    <div id="Titre-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Titre</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Description</label>
                            <input type="text" maxlength="0" id="Description" name="Description" class="form-control"   value="@actionSet.Description" />
                    <div id="Description-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Description</p>
                    </div>
                </div>
                <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 col-xs-offset-4">
                <a href="#" id="form-submit" class="btn btn-sm animated-button victoria-cancel">Modifier</a>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4">
                <a href="#" id="form-cancel" class="btn btn-sm animated-button victoria-four ">Annuler</a>
            </div>
        </div>

</fieldset>

</form>

<script src="/Scripts/Ajax/ActionSet/modify.js"></script>
