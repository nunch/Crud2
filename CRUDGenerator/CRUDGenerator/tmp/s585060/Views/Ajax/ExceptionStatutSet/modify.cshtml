

@using PerennisationSPI.Models
@{
    Layout = null;
ExceptionStatutSet exceptionStatutSet = (ExceptionStatutSet) ViewBag.exceptionStatutSet;
}


<form method="post" id="modifyData-form" action="/ExceptionStatutSet/update">
    <fieldset>
        <legend>Modifier ExceptionStatutSet</legend>
                <input type="hidden" id="Id_ExceptionStatut" name="Id_ExceptionStatut" value="@exceptionStatutSet.Id_ExceptionStatut" />
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Titre</label>
                            <input type="text" maxlength="0" id="Titre" name="Titre" class="form-control" required=required  value="@exceptionStatutSet.Titre" />
                    <div id="Titre-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Titre</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">AxeAnalyse</label>
                            <input type="number" id="AxeAnalyse" name="AxeAnalyse" class="form-control" required=required  value="@exceptionStatutSet.AxeAnalyse" />
                    <div id="AxeAnalyse-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir AxeAnalyse</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Source</label>
                            <input type="number" id="Source" name="Source" class="form-control" required=required  value="@exceptionStatutSet.Source" />
                    <div id="Source-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Source</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">IsSuppr</label>
                            <input type="number" id="IsSuppr" name="IsSuppr" class="form-control" required=required  value="@exceptionStatutSet.IsSuppr" />
                    <div id="IsSuppr-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir IsSuppr</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Description</label>
                            <input type="text" maxlength="0" id="Description" name="Description" class="form-control"   value="@exceptionStatutSet.Description" />
                    <div id="Description-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Description</p>
                    </div>
                </div>
                <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 col-xs-offset-4">
                <a href="#" id="form-submit" class="btn btn-sm animated-button victoria-cancel">Modifier</a>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4">
                <a href="#" id="form-cancel" class="btn btn-sm animated-button victoria-four ">Annuler</a>
            </div>
        </div>

</fieldset>

</form>

<script src="/Scripts/Ajax/ExceptionStatutSet/modify.js"></script>
