

@using PerennisationSPI.Models
@{
    Layout = null;
ErreurSet erreurSet = (ErreurSet) ViewBag.erreurSet;
    
        bool useChosen_on_fk_fk_ErreurSet_0 = true;
    
}


<form method="post" id="modifyData-form" action="/ErreurSet/update">
    <fieldset>
        <legend>Modifier ErreurSet</legend>
                <input type="hidden" id="Id_Erreur" name="Id_Erreur" value="@erreurSet.Id_Erreur" />
                <div class="form-group" type="requiredInput">
                    <label class="control-label">NumLigne</label>
                            <input type="number" id="NumLigne" name="NumLigne" class="form-control" required=required  value="@erreurSet.NumLigne" />
                    <div id="NumLigne-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir NumLigne</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">DetailsErreur</label>
                            <input type="text" maxlength="0" id="DetailsErreur" name="DetailsErreur" class="form-control" required=required  value="@erreurSet.DetailsErreur" />
                    <div id="DetailsErreur-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir DetailsErreur</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">IsSuppr</label>
                            <input type="number" id="IsSuppr" name="IsSuppr" class="form-control" required=required  value="@erreurSet.IsSuppr" />
                    <div id="IsSuppr-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir IsSuppr</p>
                    </div>
                </div>
                
                    @if(useChosen_on_fk_fk_ErreurSet_0)
                    {
                    <div class="form-group" id="fk-0-div">
                        <input type="hidden" id="Id_Fichier-object" value="@erreurSet.Id_Fichier" />
                        <label class="control-label">Id_Fichier</label>
                        <select data-placeholder="Choisir Id_Fichier" class="chosen-select" id="Id_Fichier" name="Id_Fichier" required=required>
                            <option disabled selected>Choisir Id_Fichier</option>
                            <option value="">Aucun</option>
                        </select>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_Fichier</p>
                        </div>
                    </div>
                    }else
                    {
                    <div id="fk-0-div" class="form-group">
                        <label class="control-label">Id_Fichier</label>
                        <input type="hidden" name="Id_Fichier" id="Id_Fichier" value="@erreurSet.Id_Fichier" required=required />
                        <div class="row">
                            <div class="col-xs-1">
                                <button id="btnResetFilters-fk-0" class="btn refresh" data-rel="tooltip" data-toggle="tooltip" data-original-title="R&eacute;initialiser les filtres">
                                    <i class="fa fa-refresh Icon"></i>
                                </button>
                            </div>
                            <div class="col-xs-4 ">
                                <div id="tab_filter-fk-0" class="customFilter">
                                    <label>
                                        <input id="customFilterInput-fk-0" type="search" class="form-control input-sm" placeholder="Rechercher..." aria-controls="fk-0-table">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <table id="fk-0-table">
                            <tfoot>
                                <tr>
                                        <th>Id_Fichier</th>
                                        <th>NomFichier</th>
                                        <th>NbSucces</th>
                                        <th>NbErreur</th>
                                        <th>IsSuppr</th>
                                        <th>Id_RapportIntegration</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_Fichier</p>
                        </div>
                    </div>
                    }
                
                <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 col-xs-offset-4">
                <a href="#" id="form-submit" class="btn btn-sm animated-button victoria-cancel">Modifier</a>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4">
                <a href="#" id="form-cancel" class="btn btn-sm animated-button victoria-four ">Annuler</a>
            </div>
        </div>

</fieldset>

</form>

<script src="/Scripts/Ajax/ErreurSet/modify.js"></script>
