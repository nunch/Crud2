

@using PerennisationSPI.Models
@{
    Layout = null;
EntiteSet entiteSet = (EntiteSet) ViewBag.entiteSet;
}


<form method="post" id="modifyData-form" action="/EntiteSet/update">
    <fieldset>
        <legend>Modifier EntiteSet</legend>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">IsSuppr</label>
                            <input type="number" id="IsSuppr" name="IsSuppr" class="form-control" required=required  value="@entiteSet.IsSuppr" />
                    <div id="IsSuppr-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir IsSuppr</p>
                    </div>
                </div>
                <input type="hidden" id="Id_Entite" name="Id_Entite" value="@entiteSet.Id_Entite" />
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Nom</label>
                            <input type="text" maxlength="0" id="Nom" name="Nom" class="form-control" required=required  value="@entiteSet.Nom" />
                    <div id="Nom-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Nom</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Description</label>
                            <input type="text" maxlength="0" id="Description" name="Description" class="form-control"   value="@entiteSet.Description" />
                    <div id="Description-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Description</p>
                    </div>
                </div>
                <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 col-xs-offset-4">
                <a href="#" id="form-submit" class="btn btn-sm animated-button victoria-cancel">Modifier</a>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4">
                <a href="#" id="form-cancel" class="btn btn-sm animated-button victoria-four ">Annuler</a>
            </div>
        </div>

</fieldset>

</form>

<script src="/Scripts/Ajax/EntiteSet/modify.js"></script>
