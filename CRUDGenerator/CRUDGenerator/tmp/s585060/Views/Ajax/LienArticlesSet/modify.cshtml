

@using PerennisationSPI.Models
@{
    Layout = null;
LienArticlesSet lienArticlesSet = (LienArticlesSet) ViewBag.lienArticlesSet;
    
        bool useChosen_on_fk_fk_LienArticlesSet_0 = true;
    
    
        bool useChosen_on_fk_fk_LienArticlesSet_1 = true;
    
}


<form method="post" id="modifyData-form" action="/LienArticlesSet/update">
    <fieldset>
        <legend>Modifier LienArticlesSet</legend>
                <input type="hidden" id="Id_LienArticles" name="Id_LienArticles" value="@lienArticlesSet.Id_LienArticles" />
                
                    @if(useChosen_on_fk_fk_LienArticlesSet_0)
                    {
                    <div class="form-group" id="fk-0-div">
                        <input type="hidden" id="Id_ArticleParent-object" value="@lienArticlesSet.Id_ArticleParent" />
                        <label class="control-label">Id_ArticleParent</label>
                        <select data-placeholder="Choisir Id_ArticleParent" class="chosen-select" id="Id_ArticleParent" name="Id_ArticleParent" required=required>
                            <option disabled selected>Choisir Id_ArticleParent</option>
                            <option value="">Aucun</option>
                        </select>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_ArticleParent</p>
                        </div>
                    </div>
                    }else
                    {
                    <div id="fk-0-div" class="form-group">
                        <label class="control-label">Id_ArticleParent</label>
                        <input type="hidden" name="Id_ArticleParent" id="Id_ArticleParent" value="@lienArticlesSet.Id_ArticleParent" required=required />
                        <div class="row">
                            <div class="col-xs-1">
                                <button id="btnResetFilters-fk-0" class="btn refresh" data-rel="tooltip" data-toggle="tooltip" data-original-title="R&eacute;initialiser les filtres">
                                    <i class="fa fa-refresh Icon"></i>
                                </button>
                            </div>
                            <div class="col-xs-4 ">
                                <div id="tab_filter-fk-0" class="customFilter">
                                    <label>
                                        <input id="customFilterInput-fk-0" type="search" class="form-control input-sm" placeholder="Rechercher..." aria-controls="fk-0-table">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <table id="fk-0-table">
                            <tfoot>
                                <tr>
                                        <th>Id_Article</th>
                                        <th>PN</th>
                                        <th>SIN</th>
                                        <th>IsSuppr</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div id="fk-0-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_ArticleParent</p>
                        </div>
                    </div>
                    }
                
                
                    @if(useChosen_on_fk_fk_LienArticlesSet_1)
                    {
                    <div class="form-group" id="fk-1-div">
                        <input type="hidden" id="Id_ArticleEnfant-object" value="@lienArticlesSet.Id_ArticleEnfant" />
                        <label class="control-label">Id_ArticleEnfant</label>
                        <select data-placeholder="Choisir Id_ArticleEnfant" class="chosen-select" id="Id_ArticleEnfant" name="Id_ArticleEnfant" required=required>
                            <option disabled selected>Choisir Id_ArticleEnfant</option>
                            <option value="">Aucun</option>
                        </select>
                        <div id="fk-1-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_ArticleEnfant</p>
                        </div>
                    </div>
                    }else
                    {
                    <div id="fk-1-div" class="form-group">
                        <label class="control-label">Id_ArticleEnfant</label>
                        <input type="hidden" name="Id_ArticleEnfant" id="Id_ArticleEnfant" value="@lienArticlesSet.Id_ArticleEnfant" required=required />
                        <div class="row">
                            <div class="col-xs-1">
                                <button id="btnResetFilters-fk-1" class="btn refresh" data-rel="tooltip" data-toggle="tooltip" data-original-title="R&eacute;initialiser les filtres">
                                    <i class="fa fa-refresh Icon"></i>
                                </button>
                            </div>
                            <div class="col-xs-4 ">
                                <div id="tab_filter-fk-1" class="customFilter">
                                    <label>
                                        <input id="customFilterInput-fk-1" type="search" class="form-control input-sm" placeholder="Rechercher..." aria-controls="fk-1-table">
                                    </label>
                                </div>
                            </div>
                        </div>
                        <table id="fk-1-table">
                            <tfoot>
                                <tr>
                                        <th>Id_Article</th>
                                        <th>PN</th>
                                        <th>SIN</th>
                                        <th>IsSuppr</th>
                                </tr>
                            </tfoot>
                        </table>
                        <div id="fk-1-div-collapse-div" class="collapse">
                            <p class="help-block">Veuillez choisir Id_ArticleEnfant</p>
                        </div>
                    </div>
                    }
                
                <div class="form-group" type="requiredInput">
                    <label class="control-label">Programme</label>
                            <input type="text" maxlength="0" id="Programme" name="Programme" class="form-control" required=required  value="@lienArticlesSet.Programme" />
                    <div id="Programme-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir Programme</p>
                    </div>
                </div>
                <div class="form-group" type="requiredInput">
                    <label class="control-label">IsSuppr</label>
                            <input type="number" id="IsSuppr" name="IsSuppr" class="form-control" required=required  value="@lienArticlesSet.IsSuppr" />
                    <div id="IsSuppr-collapse-div" class="collapse">
                        <p class="help-block">Veuillez choisir IsSuppr</p>
                    </div>
                </div>
                <div class="row">
            <div class="col-md-2 col-sm-2 col-xs-4 col-xs-offset-4">
                <a href="#" id="form-submit" class="btn btn-sm animated-button victoria-cancel">Modifier</a>
            </div>
            <div class="col-md-2 col-sm-2 col-xs-4">
                <a href="#" id="form-cancel" class="btn btn-sm animated-button victoria-four ">Annuler</a>
            </div>
        </div>

</fieldset>

</form>

<script src="/Scripts/Ajax/LienArticlesSet/modify.js"></script>
